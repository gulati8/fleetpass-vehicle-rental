# Database Configuration
POSTGRES_USER=fleetpass_user
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD_USE_openssl_rand_base64_24
POSTGRES_DB=fleetpass
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/fleetpass?schema=public

# JWT Configuration - CRITICAL: Use strong random secret in production
# Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_64_BYTE_RANDOM_SECRET_USE_openssl_rand_base64_64
JWT_EXPIRES_IN=15m

# Refresh Token Configuration (optional)
REFRESH_TOKEN_CLEANUP_DAYS=7

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
# Generate with: openssl rand -base64 32
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD_USE_openssl_rand_base64_32

# Application
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
